@import "/pages/common/movie-rating/movie-rating.wxss";

.list {
  height: 100%;
}
.list .item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}
.list .item .poster {
  width:150rpx;
  height:225rpx;
  margin-right:20rpx;
}
.list .item .meta {
  flex: 1;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.list .item .meta .title,
.list .item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}
.list .item .meta .title {
  font-size: 32rpx;
}
.list .item .meta .sub-title {
  font-size: 22rpx;
  color: #c0c0c0;
}
.list .item .meta .artists {
  font-size: 24rpx;
  color: #999;
  display: block;
  line-height: 32rpx;
}

.list .item .meta .collect-count {
  color: #bce6f9;
  font-size: 24rpx;
}

.list .tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}
.list .tips image,
.list .tips text {
  vertical-align: middle;
}
.list .tips image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
